{{>header}}
{{>fecha}}
<div class="container marginOutTurn">
    <div class="text-center mb-2">
        <h4 class="red">AGREGAR ENTRADA</h4>
    </div>
   <form action="/inventario/agregar/entrada" method="POST">
        <div class="row justify-content-center align-items-center">
            <div class="col-11 col-md-10 shadow-lg py-3 rounded">
                <div class="text-center">
                    <h5>Informaci√≥n de la Entrada</h5>
                    <hr>
                </div>
                <div class="row justify-content-center align-items-center">
                    <div class="form-group col-12">
                        <div class="row justify-content-center">
                            <div class="col-12 col-md-5">
                                <label for="exampleInputEmail1">Producto</label>
                                <select class="custom-select" name="product">
                                    <option value="0" selected>-- Seleccione un producto --</option>
                                    {{#each products}}
                                    <option value="{{idProduct}}">{{name}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-12">
                        <div class="row justify-content-center">
                            <div class="col-12 col-md-5">
                                <label for="exampleInputPassword1">Precio</label>
                                <input type="number" class="form-control" placeholder="Precio del producto" name="price"
                                    required autocomplete="off">
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-12">
                        <div class="row justify-content-center">
                            <div class="col-12 col-md-5">
                                <label for="exampleInputPassword1">Cantidad</label>
                                <input type="number" class="form-control" placeholder="Cantidad del producto"
                                    name="amount" required autocomplete="off">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-11 col-md-10 text-right px-0">
                <button type="submit" class="btn btn-primary mt-3 blockMobile">Agregar Entrada</button>
            </div>
        </div>
    </form>
</div>
