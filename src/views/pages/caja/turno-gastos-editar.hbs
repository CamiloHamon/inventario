{{>header}}
{{>header-turno}}
{{>fecha}}
<div class="container">
    <div class="text-center mb-2">
        <h4 class="red">EDITAR GASTO</h4>
    </div>
    <form action="/turno/gastos/{{bill.idBills}}/editar" method="POST">
        <div class="row justify-content-center align-items-center">
            <div class="col-11 col-md-10 shadow-lg py-3 rounded">
                <div class="text-center">
                    <h5>Información del Gasto: <span class="red">{{bill.name}}</span></h5>
                    <hr>
                </div>
                <div class="row justify-content-center my-3">
                    <div class="col-10 col-md-6 form-group">
                        <label for="exampleInputEmail1">Descripción</label>
                        <input list="products" value="{{bill.name}}" placeholder="{{bill.name}}" name="product" class="custom-select"
                            autocomplete="off" required>
                        <datalist id="products">
                            {{#each products}}
                            <option value="{{name}}">{{name}}</option>
                            {{/each}}
                        </datalist>
                    </div>
                </div>
                <div class="row justify-content-center my-3">
                    <div class="col-10 col-md-6 form-group">
                        <label for="exampleInputEmail1">Valor</label>
                        <input type="number" class="form-control" aria-describedby="basic-addon3" value="{{bill.price}}"
                            placeholder="Valor $" name="price" autocomplete="off" required>
                    </div>
                </div>
            </div>
            <div class="col-11 col-md-10 text-right px-0">
                <button type="submit" class="btn btn-primary mt-3 blockMobile">Editar Gasto</button>
            </div>
        </div>
    </form>
</div>