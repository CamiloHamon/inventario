{{>header}}
{{>header-turno}}
{{>fecha}}
<div class="container">
    <div class="text-center mb-2">
        <h4 class="red">EDITAR VENTAS</h4>
    </div>
    <div class="table-responsive mt-3 overflow tableTurno">
        <form action="/turno/venta/{{sale.idSales}}/editar" method="POST" id="form">
            <table class="table table-striped table-hover mb-0">
                <thead>
                    <tr>
                        <th scope="row" class="text-center p-0">Cód</th>
                        <th scope="col">
                            <span class="d-none d-md-block">Producto</span>
                            <span class="d-block d-md-none">Prod.</span>
                        </th>
                        <th scope="col" class="text-center">
                            <span class="d-none d-md-block">Cantidad</span>
                            <span class="d-block d-md-none">Cant.</span>
                        </th>
                        <th scope="col" class="text-center">
                            Total
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td scope="row" class="text-center p-0">
                            {{sale.idProduct}}
                        </td>
                        <td scope="col" class="py-2 py-md-0">{{sale.name}}</td>
                        <td scope="col" class="text-center w-custom-100">
                            <div class="row justify-content-center align-items-center">
                                <div class="col-3 px-0">
                                    <button type="button" class="btn bg-red rounded" id="restar">
                                        -
                                    </button>
                                </div>
                                <div class="col-5 px-0">
                                    <input type="number" class="form-control text-center" name="amount"
                                        value="{{sale.amount}}" id="amount">
                                </div>
                                <div class="col-3 px-0">
                                    <button type="button" class="btn bg-red rounded" id="sumar">
                                        +
                                    </button>
                                </div>

                            </div>
                        </td>
                        <td scope="col" class="text-center">
                            <span>${{sale.total}}</span>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="row mt-4 justify-content-center m-0">
                <div class="col-12 col-md-8">
                    <p class="font-weight-bold">Seleccione la observación a corregir</p>
                    <select class="custom-select" name="obs" required>
                        <option value="">-- Seleccione la observacion --</option>
                        {{#each observations}}
                        <option value="{{idObservationSales}}">{{no}}. {{description}} | {{name}}</option>
                        {{/each}}
                    </select>
                    <div class="text-right">
                        <button type="submit" class="btn btn-primary mt-3 blockMobile">Actualizar</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<script src="/js/venta/index.js" type="module"></script>