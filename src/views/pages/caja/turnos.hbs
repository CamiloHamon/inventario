{{>header}}
{{>fecha}}
<div class="container my-auto" id="main-container">
    <div class="row justify-content-center align-items-center">
        <div class="col-12 col-md-6">
            {{>message}}
        </div>
    </div>
    <div class="row justify-content-center align-items-center mt-turn">
        <div class="col-12 col-lg-6">
            <div class="card-body card-body-custom border p-5 rounded shadow-lg">
                <div class="text-center border-bottom-0 py-3 rounded-top shadow shadow-md-none">
                    <h3 class="red">Iniciar turno</h3>
                    <div class="py-5 p-md-5">
                        <span>
                            Para habilitar la caja, gastos, vales y bajas debe iniciar su turno.
                        </span>
                    </div>
                </div>
                <form action="/turno" method="POST">
                    <div class="text-center rounded-bottom">
                        <button type="submit" class="btn btn-primary btn-block-mb">Iniciar Turno</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>