{{>header}}
{{>header-turno}}
{{>fecha}}
<div class="container">
    <div class="text-center mb-2">
        <h4 class="red">EDITAR FIADO</h4>
    </div>
    <div class="table-responsive  overflow tableTurno heBajas">
        <form action="/turno/fiados/{{trusts.idTrust}}/editar" method="POST">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="row" class="text-center p-0">Cliente</th>
                        <th scope="col">Producto</th>
                        <th scope="col" class="text-center">Cantidad</th>
                        <th scope="col" class="text-center">Total</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td scope="row" class="text-center p-0">
                            <span class="text-capitalize">{{client.name}} - {{client.complement}}</span>
                        </td>
                        <td scope="col" class="py-2 py-md-0">{{trusts.name}}</td>
                        <td scope="col" class="text-center w-custom-100">
                            <div class="row justify-content-center align-items-center">
                                <div class="col-3 px-0">
                                    <button type="button" class="btn bg-red rounded" id="restar">
                                        -
                                    </button>
                                </div>
                                <div class="col-5 px-0">
                                    <input type="number" class="form-control text-center" name="amount"
                                        value="{{trusts.amount}}" id="amount">
                                </div>
                                <div class="col-3 px-0">
                                    <button type="button" class="btn bg-red rounded" id="sumar">
                                        +
                                    </button>
                                </div>

                            </div>
                        </td>
                        <td scope="col" class="text-center">
                            <span>${{total}}</span>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="row mt-4 justify-content-center mx-0">
                <div class="col-12 col-md-8">
                    <p class="font-weight-bold">Seleccione la observaci√≥n a corregir</p>
                    <select class="custom-select" name="obs" required>
                        <option value="">-- Seleccione la observacion --</option>
                        {{#each observations}}
                        <option value="{{idObservationSales}}">{{no}}. {{description}} | {{name}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>
            <div class="text-right px-0">
                <button type="submit" class="btn btn-primary mt-3 blockMobile">Actualizar Fiados</button>
            </div>
        </form>
    </div>
</div>
<script src="/js/venta/index.js" type="module"></script>