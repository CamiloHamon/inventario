            {{/if}}
            <div class="menu w-100" id="contentMenu">
                <div class="d-lg-none bg-red border-down-red shadow">
                    <nav class="navbar navbar-expand-lg navbar-light" id="nav">
                        <a class="navbar-brand caja border-bottom-red" href="/turno/caja" id="caja">CAJA</a>
                        <a class="navbar-brand border-bottom-red" href="/turno/gastos" id="gastos">GASTOS</a>
                        <a class="navbar-brand border-bottom-red" href="/turno/vales" id="vales">VALES</a>
                        <a class="navbar-brand border-bottom-red" href="/turno/bajas" id="bajas">BAJAS</a>
                    </nav>
                    <nav class="navbar navbar-expand-lg navbar-light" id="nav">
                        <a class="navbar-brand border-bottom-red" href="/turno/pago" id="pago">P. TURNO</a>
                        {{#if user.rol}}
                        <a class="navbar-brand border-bottom-red" href="/turno/venta" id="venta">VENTA</a>
                        {{/if}}
                        <a class="navbar-brand border-bottom-red" href="/turno/fiados" id="fiados">FIADOS</a>
                        <button type="submit" class="btn btn-danger btn-sm font-weight-bold" data-toggle="modal"
                            data-target="#endTurn">FINALIZAR</button>
                    </nav>
                </div>
                <div class="d-none d-lg-block">
                    <nav class="navbar navbar-expand-lg navbar-light bg-light p-1" id="nav">
                        <a class="navbar-brand caja" href="/turno/caja" id="caja">CAJA</a>
                        <a class="navbar-brand" href="/turno/gastos" id="gastos">GASTOS</a>
