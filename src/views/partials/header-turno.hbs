                        <a class="navbar-brand" href="/turno/bajas" id="bajas">BAJAS</a>
                        <a class="navbar-brand" href="/turno/pago" id="pago">PAGO TURNO</a>
                        {{#if user.rol}}
                        <a class="navbar-brand" href="/turno/venta" id="venta">VENTA</a>
                        {{/if}}
