{{!-- modal terminar turno --}}
<div class="modal fade" id="endTurn" tabindex="-1" role="dialog" aria-labelledby="endTurnCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <form action="/turno/terminar" method="POST" id="form-endTurn">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="endTurnLongTitle">Terminar Turno</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Est√° apunto de terminar el turno.
                    <div class="custom-control custom-checkbox my-1 mr-sm-2">
                        <input type="checkbox" class="custom-control-input" id="sendReport" name="sendReport">
                        <label class="custom-control-label" for="sendReport">Generar reporte de ventas y enviar
                            por correo electronico.</label>
                    </div>
                    <div class="row justify-content-center align-content-center mt-3" id="report">
                        <div class="row col-11 border rounded justify-content-center align-content-center d-none py-3"
                            id="contentReport">
                            <div class="col-auto text-right" id="icon"></div>
                            <div class="col-auto" id="namePDF"></div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Terminar turno</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
